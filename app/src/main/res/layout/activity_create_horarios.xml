<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_horarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aluno.projetoreservasala.Views.CreateHorariosDate">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerStart"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerEnd"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <Button
        android:text="Próximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProximoHoraInicio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>

    <Button
        android:text="Próximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProximoFimInicio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timePickerStart"
        android:visibility="invisible"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timePickerEnd"
        android:visibility="invisible"/>

    <TextView
        android:text="Reserva para sala %S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblReservaSala"
        android:textSize="30sp" />

    <TextView
        android:text="Inicio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblReservaSala"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/lblInicioReservaSala"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblInicioReservaSala"
        android:layout_marginTop="19dp"
        android:id="@+id/lblHorarioInicio"
        android:textSize="24sp" />

    <TextView
        android:text="Fim:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHorarioInicio"
        android:layout_marginTop="46dp"
        android:id="@+id/lblFimReservaSala"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblFimReservaSala"
        android:layout_alignRight="@+id/lblHorarioInicio"
        android:layout_alignEnd="@+id/lblHorarioInicio"
        android:layout_marginTop="12dp"
        android:id="@+id/lblHorarioFim"
        android:textSize="24sp" />

    <Button
        android:text="Escolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblInicioReservaSala"
        android:layout_alignRight="@+id/datePickerStart"
        android:layout_alignEnd="@+id/datePickerStart"
        android:id="@+id/btnHorarioInicio"
        android:onClick="escolherDataInicio"/>

    <Button
        android:text="Escolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHorarioFim"
        android:layout_alignTop="@+id/lblFimReservaSala"
        android:layout_alignRight="@+id/datePickerStart"
        android:layout_alignEnd="@+id/datePickerStart" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
