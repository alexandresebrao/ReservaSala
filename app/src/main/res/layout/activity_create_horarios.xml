<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_horarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aluno.projetoreservasala.Views.CreateHorarios">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <Button
        android:text="Pr贸ximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProximoHoraInicio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:onClick="escolherHora"
        android:visibility="invisible"/>

    <Button
        android:text="Pr贸ximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProximoFim"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:onClick="finalizarEscolha"
        />

    <Button
        android:text="Pr贸ximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProximoHora"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:onClick="escolherHoraFim"
        android:visibility="invisible"/>

    <Button
        android:text="Pr贸ximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProximoFimFim"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:onClick="escolherFim" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/timePicker"
        android:visibility="invisible"/>


    <TextView
        android:text="Reserva para sala %S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblReservaSala"
        android:textSize="30sp" />

    <TextView
        android:text="Inicio:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblReservaSala"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/lblInicioReservaSala"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblInicioReservaSala"
        android:layout_marginTop="19dp"
        android:id="@+id/lblHorarioInicio"
        android:textSize="24sp" />

    <TextView
        android:text="Fim:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblHorarioInicio"
        android:layout_marginTop="46dp"
        android:id="@+id/lblFimReservaSala"
        android:textSize="24sp" />

    <Button
        android:text="Salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Escolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHorarioInicio"
        android:onClick="escolherDataInicio"
        android:layout_alignTop="@+id/lblInicioReservaSala"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignEnd="@+id/datePicker" />

    <Button
        android:text="Escolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHorarioFim"
        android:onClick="escolherDataFim"
        android:layout_alignBaseline="@+id/lblFimReservaSala"
        android:layout_alignBottom="@+id/lblFimReservaSala"
        android:layout_alignRight="@+id/datePicker"
        android:layout_alignEnd="@+id/datePicker" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/lblHorarioFim"
        android:textSize="24sp"
        android:layout_below="@+id/btnHorarioFim"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
